{% extends 'base.html.twig' %}

{% block title %}Equipe{% endblock %}


{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-3 mx-auto bg-dark text-white text-center">
            <h1>Equipe</h1>
            <div class="card bg-dark" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-dark">Id : {{ equipe.id }}</li>
                    <li class="list-group-item bg-dark">Nom de l'équipe : {{ equipe.nomEquipe }}</li>
                    <li class="list-group-item bg-dark">Nom des Joueurs :</li>
                    <li class="list-group-item bg-dark">
                        {% for joueur in joueurs %}
                        {% if joueur.equipe.id == equipe.id %}
                        - {{ joueur.getPrenomJoueur()}}
                         {{ joueur.getNomJoueur()}}
                        {% endif %}
                        {% endfor %}
                    </li>

                </ul>
            </div>

            <a class="btn btn-primary my-1" href="{{ path('equipe_index') }}">Afficher les équipes</a>
            <a class="btn btn-info my-1" href="{{ path('equipe_edit', {'id': equipe.id}) }}">edit</a>
            {# {{ include('equipe/_delete_form.html.twig') }} #}
        </div>
    </div>
</div>


{% endblock %}